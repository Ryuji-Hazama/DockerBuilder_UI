{
    "MapleLogger": {
        "ConsoleLogLevel": "DEBUG",
        "FileLogLevel": "INFO",
        "MaxLogSize": 3,
        "WorkingDirectory": "logs",
        "FileEncoding": "utf-8"
    },
    "ApplicationSettings": {
        "Images": [
            {
                "Name": "Sample Image",
                "BaseImage": "sample",
                "Dockerfile": "Dockerfile",
                "ContextPath": "./sample",
                "BuildArgs": {
                    "ARG1": "value1",
                    "ARG2": "value2"
                },
                "Version": "1.0.0",
                "Volumes": [
                    "/data",
                    "/config"
                ]
            },
            {
                "Name": "Example Image",
                "BaseImage": "example",
                "Dockerfile": "Dockerfile",
                "ContextPath": "./example",
                "Version": "1.0.0"
            }
        ],
        "BuildSettings": {
            "DeleteExistingImages": true,
            "AutoVersioning": true,
            "VersionFormat": "major.minor.patch",
            "ComposeFilePath": "./compose.yaml",
            "ComposeCommand": "docker compose"
        },
        "PackageSettings": {
            "OutputDirectory": "./packages"
        }
    }
}